<%= render "shared/header"%>
<h1 class="top">編集ページ</h1>

<%= form_with model: @schedule do |f| %>
    <table class="table">
     <tr>
      <th><%= f.label :title,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
     </tr>

     <tr>
      <th><%= f.label :start_date,"開始日" %></th>
      <td><%= f.date_field :start_date, value: @schedule.start_date %></td>
     </tr>

     <tr>
      <th><%= f.label :end_date,"終了日" %></th>
      <td><%= f.date_field :end_date, value: @schedule.end_date %></td>
     </tr>

     <tr>
      <th><%= f.label :all_day,"終日" %></th>
      <td><%= f.check_box :all_day %><br>終日の場合はチェックを入れます</td>
     </tr>

     <tr>
      <th><%= f.label :confirm,"スケジュールメモ" %></th>
      <td><%= f.text_area :confirm %></td>
     </tr>


    </table>

    
    <input type="submit" class="btn" value="編集を完了する"%>

    <div class="button">
    <h2><%= link_to"スケジュール一覧に戻る",:schedules %></h2>
    </div>
<% end %>
<%= render "shared/footer"%>